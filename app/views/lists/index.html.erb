<br>
<div class="container">
  <h1>All Lists</h1>
    <div>
      <div class="row">
        <% @lists.each do |list|%>
          <div class="card-movie" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(list.photo.key) if list.photo.attached? %>');">
          <%= link_to list_path(list) do %>
          <div class="btn btn-primary">
            <%= list.name %>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  <%= link_to "Add List", new_list_path, class: "btn btn-dark mt-3, ml-5"%>
</div>
