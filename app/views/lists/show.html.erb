<div style="background-image: url('<%= url_for(@list) %>'); background-size: cover; background-repeat: no-repeat; background-position: center center; height: 100vh;">
  <br>
  <div class="container">
    <h1><%= @list.name %></h1>
    <div class="cards">
      <% @list.bookmarks.each do |bookmark|%>
        <div>
          <div class="card-movie" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= "#{bookmark.movie.poster_url}" %>)">
          </div>
          <%= "#{bookmark.movie.title} " %><%= link_to "🗑️", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-dark mt-3 mt-2 mb-3" %>
          <br>
        </div>
      <% end %>
    </div>
    <%= link_to "Home", lists_path, class: "btn btn-dark mt-3 mt-2" %>
    <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-dark mt-3 mt-2" %>
  </div>
</div>
